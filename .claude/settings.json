{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/sessionStart",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "permissions": {
    "bash": {
      "python -m pytest:*": "always_allow",
      "python -m mypy:*": "always_allow",
      "python -m clx.cli.main:*": "always_allow",
      "pytest:*": "always_allow",
      "python:*": "always_allow",
      "sort:*": "always_allow",
      "echo:*": "always_allow",
      "git commit:*": "always_allow",
      "git add:*": "always_allow",
      "git push:*": "always_allow",
      "git mv:*": "always_allow",
      "git fetch:*": "always_allow",
      "git pull:*": "always_allow",
      "git rebase:*": "always_allow",
      "git merge:*": "always_allow",
      "git merge-base:*": "always_allow",
      "git log:*": "always_allow",
      "git show:*": "always_allow",
      "git checkout:*": "always_allow",
      "git status:*": "always_allow",
      "git diff:*": "always_allow",
      "git branch:*": "always_allow",
      "git remote:*": "always_allow",
      "gh pr create:*": "always_allow",
      "gh pr list:*": "always_allow",
      "gh pr view:*": "always_allow",
      "gh pr edit:*": "always_allow",
      "gh api:*": "always_allow",
      "gh run list:*": "always_allow",
      "gh run watch:*": "always_allow",
      "gh run view:*": "always_allow",
      "gh:*": "always_allow",
      "docker ps:*": "always_allow",
      "docker logs:*": "always_allow",
      "docker inspect:*": "always_allow",
      "docker run:*": "always_allow",
      "docker build:*": "always_allow",
      "docker --version:*": "always_allow",
      "docker-compose:*": "always_allow",
      "pkill:*": "always_allow",
      "set:*": "always_allow",
      "timeout:*": "always_allow",
      "ping:*": "always_allow",
      "source:*": "always_allow",
      "cat:*": "always_allow",
      "pip install:*": "always_allow",
      "pip uninstall:*": "always_allow",
      "pip show:*": "always_allow",
      "uv:*": "always_allow",
      "uv build:*": "always_allow",
      "uv run:*": "always_allow",
      "uv run pytest:*": "always_allow",
      "clx:*": "always_allow",
      "findstr:*": "always_allow",
      "mkdir:*": "always_allow",
      "rm:*": "always_allow",
      "ls:*": "always_allow",
      "dir:*": "always_allow",
      "taskkill:*": "always_allow",
      "powershell:*": "always_allow",
      "bash:*": "always_allow",
      "where:*": "always_allow",
      "dos2unix:*": "always_allow",
      "chmod:*": "always_allow",
      "find:*": "always_allow",
      "tee:*": "always_allow",
      "xargs:*": "always_allow",
      "wait": "always_allow",
      "head:*": "always_allow",
      "tail:*": "always_allow",
      "grep:*": "always_allow",
      "for:*": "always_allow",
      ".claude/sessionStart": "always_allow",
      ".venv/Scripts/python.exe:*": "always_allow",
      "sqlite3:*": "always_allow",
      "LOG_LEVEL=*": "always_allow",
      "CLX_DEBUG_ABORT=*": "always_allow"
    },
    "read": {
      "**": "always_allow"
    }
  }
}
